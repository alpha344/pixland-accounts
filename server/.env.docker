# Docker environment configuration for pixland-accounts

# Server Configuration
SKIP_DOTENV=true
PIXLAND_HOST=0.0.0.0
PIXLAND_PORT=8090

# Database Configuration
# Connect to existing MongoDB service in pixland network
PIXLAND_ACCOUNTS_DB=mongodb://pixland-mongo:27017/?directConnection=true
PIXLAND_ACCOUNTS_DB_NAME=pixland_account 

# Cerbos Configuration
CERBOS_HOST=pixland-cerbos:3593

# CORS Configuration
PIXLAND_ACCOUNTS_ORIGINS=http://localhost:3000,http://pixland-accounts-dev,https://*.netlify.app

# Auth Configuration (uncomment and configure as needed)
PIXLAND_AUTH0_DOMAIN=https://example.auth0.com
PIXLAND_AUTH0_AUDIENCE=https://api.pixland.example.com
PIXLAND_AUTH0_CLIENTID=
PIXLAND_AUTH0_CLIENTSECRET=
